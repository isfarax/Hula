<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/list_convo_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/usericon" />

    <TextView
        android:id="@+id/list_convo_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/list_convo_avatar"
        android:layout_toRightOf="@+id/list_convo_avatar" 
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF" android:textSize="18dp" android:layout_marginLeft="10dp" android:paddingRight="15dp" android:layout_marginTop="-5dp" android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/list_convo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_convo_user"
        android:layout_below="@+id/list_convo_user" 
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="8dp" />




    <TextView
        android:id="@+id/list_convo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_convo_time"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_convo_time"
        android:paddingRight="15dp" 
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="11dp"/>

</RelativeLayout>