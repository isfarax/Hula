<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <EditText
        android:id="@+id/edit_myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_marginBottom="5dp"
        android:inputType="text">

    </EditText>

    <ImageButton
        android:id="@+id/avatar_img_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_myname"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/usericon" android:padding="0dp"/>

    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar_img_button"
        android:layout_alignRight="@+id/edit_myname"
        android:text="Update" />

</RelativeLayout>