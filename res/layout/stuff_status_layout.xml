<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/stuff_status_avatar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/usericon" />

    <TextView
        android:id="@+id/stuff_status_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/stuff_status_avatar"
        android:layout_toRightOf="@+id/stuff_status_avatar"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#999999" android:textSize="18dp" android:layout_marginLeft="10dp" android:paddingRight="15dp" android:layout_marginTop="-5dp" android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/stuff_status_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stuff_status_user"
        android:layout_below="@+id/stuff_status_user"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="8dp"
        android:textColor="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/stuff_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stuff_status_time"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stuff_status_time"
        android:paddingRight="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</RelativeLayout>