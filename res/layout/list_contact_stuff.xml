<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"  >

    <TextView
        android:id="@+id/list_contact_stuff_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text" android:textSize="18dp" android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/list_contact_stuff_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text" android:textSize="8dp" android:textColor="@android:color/holo_blue_light"/>

</LinearLayout>